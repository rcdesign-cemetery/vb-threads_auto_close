	<plugins>
		<plugin active="1" executionorder="5">
			<title>Deny write in the old threads</title>
			<hookname>newreply_start</hookname>
			<phpcode><![CDATA[$tac_timeline = TIMENOW - (int)$vbulletin->options['tac_time_line'] * 60*60*24;
